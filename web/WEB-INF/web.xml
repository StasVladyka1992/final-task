<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>by.vladyka.epam.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>secure</servlet-name>
        <servlet-class>by.vladyka.epam.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>secure</servlet-name>
        <url-pattern>/secure</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>adminMail</param-name>
        <param-value>stavladyk@gmail.com</param-value>
    </context-param>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.vladyka.epam.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>by.vladyka.epam.controller.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/secure/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <!--<error-page>-->
        <!--<location>/error.jsp</location>-->
    <!--</error-page>-->
</web-app>