<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="cycleFile" fileName="${sys:catalina.home}/logs/online_pharmacy.log" append="true">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %m %throwable%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="cycleFile"/>
        </Root>
    </Loggers>
</Configuration>